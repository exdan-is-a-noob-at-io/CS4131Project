<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CS4131ProjectEddenChew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green_30</item>
        <item name="colorPrimaryVariant">@color/main_green_50</item>
        <item name="colorOnPrimary">@color/grey_80</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_blue_20</item>
        <item name="colorSecondaryVariant">@color/main_blue_40</item>
        <item name="colorOnSecondary">@color/grey_80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/main_blue_90</item>
        <item name="android:windowBackground">@color/main_blue_90</item>
        <item name="android:textColor">@color/grey_20</item>
        <item name="android:textColorHint">@color/grey_20</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/grey_20</item>
    </style>

    <style name="Theme.CS4131ProjectEddenChew.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/main_blue_80</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">"Search Here!"</item>
    </style>


    <style name="Theme.CS4131ProjectEddenChew.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.CS4131ProjectEddenChew.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CS4131ProjectEddenChew.DarkActionBar.BackButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>